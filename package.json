{
  "name": "projection-engine",
  "version": "1.0.0-beta",
  "main": "public/build/electron.js",
  "scripts": {
    "start": "concurrently \"yarn svelte-dev\" \"electron-forge start\"",
    "package": "yarn svelte-build && electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "svelte-build": "rollup -c",
    "svelte-dev": "rollup -c -w",
    "svelte-start": "sirv public"
  },
  "keywords": [],
  "author": "facobackup",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "--asar": false
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "crawler"
          }
        }
      ]
    }
  },
  "dependencies": {
    "@sveltejs/svelte-virtual-list": "^3.0.1",
    "atob": "^2.1.2",
    "gl-matrix": "^3.4.3",
    "hdrpng": "https://github.com/enkimute/hdrpng.js.git",
    "shared-resources": "https://github.com/projection-engine/shared-resources.git",
    "sharp": "^0.31.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.67",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-image": "^2.1.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "concurrently": "^5.1.0",
    "electron": "^20.1.3",
    "electron-is-dev": "^2.0.0",
    "rollup": "^2.77.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "2.0.2",
    "svelte": "^3.50.1",
    "svelte-preprocess": "^4.10.7"
  }
}
